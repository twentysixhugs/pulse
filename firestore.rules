rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check user's status from their profile
    function isNotBanned(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isBanned == false;
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow reading categories for anyone who is logged in
    match /categories/{categoryId} {
      allow read: if request.auth != null;
    }

    // Allow reading user's own profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      // Allow updates for subscription management (by admin) or reputation (by user)
      allow write: if request.auth != null; 
    }
    
    // Allow users to manage their reputation votes
    match /users/{userId}/traderReputation/{traderId} {
       allow read, write: if request.auth.uid == userId && isNotBanned(request.auth.uid);
    }

    // Allow reading traders for any non-banned user
    match /traders/{traderId} {
      allow read: if request.auth != null && isNotBanned(request.auth.uid);
      allow write: if request.auth != null && isNotBanned(request.auth.uid);
    }

    // Allow reading/writing alerts for any non-banned user
    match /alerts/{alertId} {
      allow read, write: if request.auth != null && isNotBanned(request.auth.uid);
    }

    // Allow creating reports for any non-banned user
    match /reports/{reportId} {
      allow create: if request.auth != null && isNotBanned(request.auth.uid);
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
